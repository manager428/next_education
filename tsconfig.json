{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": false,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "baseUrl": "src",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "additional.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
